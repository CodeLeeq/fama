<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    tools:context="com.example.user.fama.MainActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Personal Info"
        android:textAllCaps="true"/>

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FullName"
        android:inputType="text" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"/>
    <EditText
        android:id="@+id/editLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Location"
        android:inputType="text" />
    <EditText
        android:id="@+id/editNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:inputType="phone" />
    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:spinnersShown="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:textAppearance="@color/colorAccent"
        android:text="Farm Info"
        android:textAllCaps="true"/>
    <EditText
        android:id="@+id/editFarmSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farm Size"
        android:inputType="text" />
    <EditText
        android:id="@+id/editCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crop Produced"
        android:inputType="text" />
    <EditText
        android:id="@+id/editTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Target Market"
        android:inputType="text" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:textAppearance="@color/colorAccent"
        android:text="Account Info"
        android:textAllCaps="true"/>


</LinearLayout>
